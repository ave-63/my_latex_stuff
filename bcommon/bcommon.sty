\newcommand{\btwocol}[2]{%~\\ just put new line yourself
  \begin{minipage}[t]{0.48\textwidth} \vspace{0em} #1 \end{minipage}
  \hfill
  \begin{minipage}[t]{0.48\textwidth} \vspace{0em} #2 \end{minipage}
}

\newcommand{\bbtwocol}[4]{%#1 and #2 should be decimals which sum to at most 1. #3 and #4 are content.
  \begin{minipage}[t]{#1\textwidth} \vspace{0em} #3 \end{minipage}
  \hfill
  \begin{minipage}[t]{#2\textwidth} \vspace{0em} #4 \end{minipage}
}

\newcommand{\bbthreecol}[6]{%#1 - #3 should be decimals which sum to at most 1. #4 - #6 are content.
  \begin{minipage}[t]{#1\textwidth} \vspace{0em} #4 \end{minipage}
  \hfill
  \begin{minipage}[t]{#2\textwidth} \vspace{0em} #5 \end{minipage}
  \hfill
  \begin{minipage}[t]{#3\textwidth} \vspace{0em} #6 \end{minipage}
}

\newcommand{\bbfourcol}[8]{%#1 - #4 should be decimals which sum to at most 1. #5 - #8 are content.
  \begin{minipage}[t]{#1\textwidth} \vspace{0em} #5 \end{minipage}
  \hfill
  \begin{minipage}[t]{#2\textwidth} \vspace{0em} #6 \end{minipage}
  \hfill
  \begin{minipage}[t]{#3\textwidth} \vspace{0em} #7 \end{minipage}
  \hfill
  \begin{minipage}[t]{#4\textwidth} \vspace{0em} #8 \end{minipage}
}

